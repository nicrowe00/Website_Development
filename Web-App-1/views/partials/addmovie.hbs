<form class="ui stacked segment form" action="/compilation/{{compilation.id}}/addmovie" method="POST">
  <div class="four fields">
    <div class="field">
      <label>Title</label>
      <input placeholder="Title" type="text" name="title" autofocus required>
    </div>
    <div class="field">
      <label>Director</label>
      <input placeholder="Director" type="text" name="director" required>
    </div>
    <div class="field">
      <label>Genre</label>
      <input placeholder="Genre" type="text" name="genre" required>
    </div>
    <div class="field">
      <label>Duration</label>
      <input placeholder="Duration" type="text" name="duration" required>
    </div>
  </div>
  <button class="ui blue submit button">Add Movie</button>
</form>